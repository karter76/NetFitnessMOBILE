<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff4f0108" />
            <gradient  android:angle="-90"  android:startColor="#ffa20f1c" android:endColor="#ffdd644f"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffaf4731" />
            <solid  android:color="#fff48855"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff4f0108" />
            <gradient  android:angle="-90"  android:startColor="#ffdd644f" android:endColor="#ffa20f1c" />
        </shape>
    </item>
</selector>